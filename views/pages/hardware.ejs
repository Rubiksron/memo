<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/layout.css">
  <link rel="stylesheet" href="/css/pages/hardware.css">
  <title>hardware</title>
</head>
<body>
  <%- include('../partials/dropdown') %>
  <ul id="ulMemos">
    <% memos.forEach((memo) => { %>
      <form action="/delete/<%= memo.id %>?_method=DELETE" method="post" name="memo">
       <% if(memo.chore_type === 'hardware') { %>
          <li>chore: <%= memo.memo%><button type="submit" id="deleteButton">X</button></li>
       <% } %>
      </form>
   <% }) %>
  </ul>
  
</body>
</html>